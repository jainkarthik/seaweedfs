{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Prep SeaweedFS Env",
            "type": "shell",
            "command": "mkdir -p /tmp/weed/master /tmp/weed/volume1 /tmp/weed/filer /tmp/weed/logs && sudo cp -fv ${workspaceFolder}/test/bryck-test/s3.json /etc/seaweedfs/s3.json && sudo cp -fv ${workspaceFolder}/test/bryck-test/filer.toml /etc/seaweedfs/filer.toml",
            "problemMatcher": []
        },
        {
            "label": "Build SeaweedFS",
            "type": "shell",
            "command": "go build -a -gcflags='all=-N -l' -o ${workspaceFolder}/test/bryck-test/weed-debug ${workspaceFolder}/weed",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": ["$go"],
            "dependsOn": ["Prep SeaweedFS Env"]
        }
    ]
}
